{
    "hosting": {
        "public": "public",
        "headers": [
            {
                "source" : "**/*.@(html)",
                "headers" : [ {
                    "key" : "Cache-Control",
                    "value" : "max-age=0"
                } ]
            },
            {
                "source" : "**/*.@(ico)",
                "headers" : [ {
                    "key" : "Cache-Control",
                    "value" : "max-age=604800"
                } ]
            },
            {
                "source" : "**/*.@(jpg|jpeg|gif|png|ogg|mp4|webm)",
                "headers" : [ {
                    "key" : "Cache-Control",
                    "value" : "max-age=2628000"
                } ]
            },
            {
                "source" : "**/*.@(eot|svg|ttf|woff|woff2)",
                "headers" : [ {
                    "key" : "Cache-Control",
                    "value" : "max-age=2628000"
                } ]
            },
            {
                "source" : "**/*.@(css|js)",
                "headers" : [ {
                    "key" : "Cache-Control",
                    "value" : "max-age=31536000"
                } ]
            }
        ]
    },
    "database": {
        "rules": "database.rules.json"
    }
}
